<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.github.andreptb</groupId>
		<artifactId>andreptb-component-parent</artifactId>
		<version>0.5.0</version>
	</parent>
	<artifactId>fitnesse-selenium-slim</artifactId>
	<version>0.9.0</version>
	<name>fitnesse-selenium-slim</name>
	<description>FitNesse Selenium fixture in slim format. Allows running selenium commands similar to firefox IDE plugin.</description>
	<url>https://github.com/andreptb/fitnesse-selenium-slim</url>

	<developers>
		<developer>
			<name>Andre Albino Pereira</name>
			<url>https://github.com/andreptb</url>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>The MIT License (MIT)</name>
			<url>http://opensource.org/licenses/MIT</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git://github.com/andreptb/fitnesse-selenium-slim.git</connection>
		<developerConnection>scm:git:git@github.com:andreptb/fitnesse-selenium-slim.git</developerConnection>
		<url>https://github.com/andreptb/fitnesse-selenium-slim</url>
	</scm>

	<properties>
		<fitnesse.version>20150814</fitnesse.version>
		<selenium.version>2.48.2</selenium.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.github.andreptb</groupId>
				<artifactId>fitnesse-maven-runner-plugin</artifactId>
				<version>0.1.0</version>
				<executions>
					<execution>
						<id>fitnesse-it</id>
						<phase>test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<command><![CDATA[FitNesseSeleniumSlim.SeleniumFixtureTests?suite&format=text -e 0]]></command>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>com.github.andreptb</groupId>
						<artifactId>fitnesse-jdbc-slim</artifactId>
						<version>0.0.2</version>
					</dependency>
					<dependency>
						<groupId>org.hsqldb</groupId>
						<artifactId>hsqldb</artifactId>
						<version>2.3.3</version>
					</dependency>
				</dependencies>
				<configuration>
					<root>fitnesse</root>
					<includeProjectDependencies>true</includeProjectDependencies>
				</configuration>
			</plugin>
		</plugins>

	</build>

	<dependencies>
		<dependency>
			<groupId>org.fitnesse</groupId>
			<artifactId>fitnesse</artifactId>
			<version>${fitnesse.version}</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>org.reflections</groupId>
			<artifactId>reflections</artifactId>
			<version>0.9.10</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
			<version>4.12</version>
		</dependency>

	</dependencies>

</project>
